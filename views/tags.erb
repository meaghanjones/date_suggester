<div class="catcontainer">

  <div class="cat-content">

    <h1>Categories</h1>
    <% if @tags == [] %>
    <p>There are no categories saved in the database yet.</p>

    <% else %>
    <ul>
      <% @tags.each do |tag| %>
      <li><a href="/tags/<%= tag.id %>"><%=tag.name%></a></li>
      <% end %>
    </ul>
    <% end %>

    <h3>Add categories to help organize your dates!</h3>
    <%= erb(:errors, :locals => { :object => @tag }) %>
    <div>

      <form class="morecats" action="/tags/onpage" method="post">
        <input type="text" name="tag_name" id="tag_name">
        <button type="submit">Add Category</button>
      </form>
    </div>

  </div>

</div>
