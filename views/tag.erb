<h1><%= @tag.name %></h1>

<% if @tag.date_ideas == []%>
<p>There are no categories added to this date yet. Please add some below.</p>
<% else %>
<ul>
  <% @tag.date_ideas.each do |date_idea|%>
  <li><a href="/dates/<%= date_idea.id %>"><%= date_idea.name %></a></li>
  <% end %>
</ul>
<% end %>

<form action="/tags/<%= @tag.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="tag_name">Rename this category</label>
  <input id="tag_name" name="tag_name" type="text">
  <button type="submit">Update</button>
</form>

<form action="/tags/<%= @tag.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" >Delete <%= @tag.name  %></button>
</form>
